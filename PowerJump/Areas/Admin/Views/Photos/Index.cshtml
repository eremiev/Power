@model List<PowerJump.Models.Photo>

@{
    ViewBag.Title = "Index";
}

<h2>Снимки</h2>
<p>
    @Html.ActionLink("Добави снимка", "Create")
</p>

<div class="row">
    <div class="col-lg-12">
        <div class="bs-component">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#projects" data-toggle="tab" aria-expanded="true">Проекти</a></li>
                <li class=""><a href="#events" data-toggle="tab" aria-expanded="false">Събития</a></li>
            </ul>
            <div id="myTabContent" class="tab-content">
                <div class="tab-pane fade active in" id="projects">
                    <p>
                        <table class="table">
                            <tr>
                                <th>
                                    Заглавие
                                </th>
                                <th>
                                    Описание
                                </th>
                                <th>
                                    Снимки
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in ViewBag.Projects)
                            {
                                <tr>
                                    <td>
                                        @item.Title
                                    </td>
                                    <td>
                                        @item.Description
                                    </td>
                                    <td>
                                        @item.Photos.Count
                                    </td>
                                    <td>
                                        @Html.ActionLink("Виж галерия", "Details", new { id = item.GalleryId }) 
                                    </td>
                                </tr>
                            }

                        </table>
                    </p>
                </div>
                <div class="tab-pane fade" id="events">

                    <p>
                        <table class="table">
                            <tr>
                                <th>
                                    Заглавие
                                </th>
                                <th>
                                    Описание
                                </th>
                                <th>
                                    Снимки
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in ViewBag.Events)
                            {
                                <tr>
                                    <td>
                                        @item.Title
                                    </td>
                                    <td>
                                        @item.Description
                                    </td>
                                    <td>
                                        @item.Photos.Count
                                    </td>
                                    <td>
                                        @Html.ActionLink("Виж галерия", "Details", new { id = item.GalleryId }) |
                                    </td>
                                </tr>
                            }

                        </table>
                    </p>
                </div>
            </div>
            <div id="source-button" class="btn btn-primary btn-xs" style="display: none;">&lt; &gt;</div>
        </div>
    </div>
</div>
